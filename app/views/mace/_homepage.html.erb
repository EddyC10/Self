<div class="card">

  <div class="card-header bg-primary">
    <h5 class="text-light"><%= item.name %></h5>
  </div>

  <div class="card-body">

  <div class="row">
    <div class="col align-self-center">
      <dl>
        <dt>Image</dt>
        <dd><img src="<%= item.image %>" class="img-thumbnail"></dd>
      </dl>
    </div>

    <div class="col">
      <dl>

      <dt>
        Name
      </dt>
      <dd>
        <%= item.name %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= item.description %>
      </dd>

      <dt>
        Quantity
      </dt>
      <dd>
        <%= item.quantity %>
      </dd>

      <dt>
        Item #
      </dt>
      <dd>
        <%= item.item_number %>
      </dd>

      </dl>
    </div>
  </div>
    
    <% if @current_user != nil %>
    <div class="row">
      <div class="col">
        <div class="d-grid">
          <%= link_to edit_mace_path(item), class: "btn btn-warning btn-lg btn-block" do %>
            <span><i class="fa-regular fa-pen-to-square"></i></span>
          <% end %>
          </a>
        </div>
      </div>
      <div class="col">
        <div class="d-grid">
          <a href="/delete/<%= item.id %>" method="get" class="btn btn-danger btn-lg btn-block">
            <span><i class="fa-regular fa-trash-can"></i></span>
          </a>
        </div>
      </div>
    </div>
    <% else %>
    <% end %>
  </div>

   
    
    
