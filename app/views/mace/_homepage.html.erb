<div class="card">

  <div class="card-header bg-primary">
    <h5 class="text-light"><%= item.name %></h5>
  </div>

  <div class="card-body">

  <div class="row">

  <!-- Testing beyong this point -->
<% item_photos = Photo.where(item_id: item.id) %>
<% i = 0 %>
<div class="col align-self-center">
  <div id="<%= item.id %>" class="carousel slide">
    <div class="carousel-inner">
    <% while i <= item_photos.count %>
    <% if item_photos[0] != nil %>
      <% if i == 0 %>
        <div class="carousel-item active">
            <img src="<%= item_photos[i].photo %>" class="d-block img-thumbnail" alt="main_photo">
        </div>
        <% i = i + 1%>
      <% end %>
      <% if i > 0 and i < item_photos.count%>
        <div class="carousel-item">
            <img src="<%= item_photos[i].photo %>" class="d-block img-thumbnail" alt="main_photo">
        </div>
        <% i = i + 1%>
      <% end %>
    <% else %>
    <% end %>
    <% i = i + 1%>
    <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#<%= item.id %>" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#<%= item.id %>" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>

  
  <!-- Testing above this point -->

    <div class="col">
      <dl>
      <% if @current_user != nil %>
      <dt>
        Item id
      </dt>
      <dd>
        <%= item.id%>
      </dd>
      <% else %>
      <% end %>

      <dt>
        Name
      </dt>
      <dd>
        <%= item.name %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= item.description %>
      </dd>

      <dt>
        Items per box
      </dt>
      <dd>
        <%= item.quantity %>
      </dd>

      <dt>
        Item #
      </dt>
      <dd>
        <%= item.item_number %>
      </dd>

      <dt>
        In stock
      </dt>
      <dd>
        <%= item.in_stock %>
      </dd>

      </dl>
    </div>
  </div>
    
    <% if @current_user != nil %>
    <div class="row">
      <div class="col">
        <div class="d-grid">
          <%= link_to edit_mace_path(item), class: "btn btn-warning btn-lg btn-block" do %>
            <span><i class="fa-regular fa-pen-to-square"></i></span>
          <% end %>
          </a>
        </div>
      </div>
      <div class="col">
        <div class="d-grid">
          <a href="/delete/<%= item.id %>" method="get" class="btn btn-danger btn-lg btn-block">
            <span><i class="fa-regular fa-trash-can"></i></span>
          </a>
        </div>
      </div>
    </div>
    <% else %>
    <% end %>
  </div>

   
    
    
    <div class="card-footer bg-primary">
      <!--<h5 class="text-light">Last updated <%= time_ago_in_words(item.updated_at) %> ago</h2>-->
      <h5></h5>
    </div>
  </div>

