<h1 class="col">Edit item</h1>

<hr>

<form action="/mace/edit_item/<%= @item.id %>" method="post" class="col">

  <label for="name">Item Name</label>
  <input id="name" type="text" name="name" value="<%= @item.name %>">

  <br>

  <label for="image">Image</label>
  <input id="image" type="text" name="image" value="<%= @item.image %>">

  <br>

  <label for="description">description</label>
  <textarea id="description" name="description" ><%= @item.description %></textarea>

  <br>

  <label for="quantitu">Quantity</label>
  <input id="quantity" type="number" name="quantity" value="<%= @item.quantity %>">

  <br>

  <label for="item_number">Item Number</label>
  <input id="item_number" type="text" name="item_number" value="<%= @item.item_number %>">

  <br>

  <button>Submit</button>
</form>
